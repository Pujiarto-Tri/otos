{
  "version": 2,
  "functions": {
    "api/index.py": {
      "runtime": "python3.12",
      "maxLambdaSize": "15mb"
    }
  },
  "routes": [
    { "src": "/static/(.*)", "dest": "/staticfiles/$1" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "otos.settings",
    "SECRET_KEY": "vercel-temp-secret-key-change-in-production-12345",
    "DEBUG": "False",
    "ALLOWED_HOSTS": ".vercel.app,localhost,127.0.0.1"
  }
}
