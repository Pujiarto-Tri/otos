{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "otos.settings",
    "SECRET_KEY": "vercel-temp-secret-key-change-in-production-12345",
    "DEBUG": "False",
    "ALLOWED_HOSTS": ".vercel.app,localhost,127.0.0.1"
  },
  "buildCommand": "bash vercel-build.sh"
}
